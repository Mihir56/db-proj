extends layout

block content
  .page-header
    h3 New Post
  form(method='POST')
    .row
      .form-group
        label.control-label(for='title') Post Title
        input.form-control(type='text', name='title', id='postTitle', placeholder='Reddit is inferior by design', autofocus=true)
      h2 #{Interest}
      .form-group
        label.control-label(for='content') Content
        input.form-control(type='text', name='content', id='password', placeholder='e.g. "Dogs"')
    
    .row
      .form-group.col-sm-6
        button.btn.btn-primary(type='submit')
          i.fa.fa-bicycle
          | Cancel        
      .form-group.col-sm-6
        button.btn.btn-primary(type='submit')
          i.fa.fa-bitcoin
          | Submit   
      hr
